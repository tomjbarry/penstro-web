mixin PostingPreview(iter)
	div(ng-controller='PostingPreviewController').pyPostingPreview.col-xs-12.col-md-12
		div(ng-init='init(' + iter + ')').pageItem
			+Preview
				div.row
					span.col-xs-12.col-sm-8.col-md-9.col-lg-10
						div.row
							div.col-xs-12
								+Link(constants.states.POSTINGS_ID_TITLE + '({' + constants.pathVariables.POSTING + ': posting.id, ' + constants.pathVariables.TITLE + ': hrefTitle})', undefined, '{reload: true}').pyPostingReference
									//-+TitleIcon('fa-newspaper-o')
									+Removed('posting.removed')
										+Title('title').posting-title
						div.row
							div.col-xs-12.col-md-6
								+AuthorReference('posting.author')
								span &nbsp
								+Timestamp('timeSince', 'calendar')
							div(ng-show='posting.tags && posting.tags.length > 0').col-xs-12.col-md-6.ng-hide
								+TagList('posting.tags').pull-right
						div.row
							div.col-xs-12
								+ContentInfo('posting')
					span.col-xs-12.col-sm-4.col-md-3.col-lg-2
						+AppreciationSummary('tally.appreciation', t('tallyTooltips.posting.currency'))