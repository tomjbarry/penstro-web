mixin UserPreview(iter)
	div(ng-controller='UserPreviewController').pyUserPreview.col-xs-12.col-md-12
		div(ng-init='init(' + iter + ')').pageItem
			+Preview
				div.row
					span.col-xs-12.col-sm-8.col-md-9.col-lg-10
						div.row
							div.col-xs-12
								+Link(constants.states.USERS_ID + '({' + constants.pathVariables.USER + ': user.username.username})', undefined, '{reload: true}').pyUsernameReference
									//-+TitleIcon('fa-user')
									+UserTitle('user.username')
						div.row
							div.col-xs-12
								+ContentInfo('user')
					span.col-xs-12.col-sm-4.col-md-3.col-lg-2
						+AppreciationSummary('tally.appreciation', t('tallyTooltips.user.currency'))