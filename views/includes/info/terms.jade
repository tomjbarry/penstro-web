mixin Terms
	div#pyTerms.col-xs-12
		div.row.pyTermsGenerated
			- var key, section, i;
			span(id=constants.viewIds.SIDEBAR).hidden-xs.col-sm-4.col-md-3.pull-right.jsOnly
				span.fixed-sm.pyTerms
					ul(role='tablist').nav.nav-pills.nav-stacked.pyTermsSidebar
						//-each section, key in constants.termsSections
						each section, key in [constants.termsSections.ACCEPT,constants.termsSections.PRIVACY,constants.termsSections.SECURITY,constants.termsSections.REPORTS,constants.termsSections.DISRUPTIONS,constants.termsSections.STANDARDS,constants.termsSections.VIOLATIONS,constants.termsSections.PROHIBITED,constants.termsSections.PENNIES,constants.termsSections.TIPS,constants.termsSections.INFRINGEMENT,constants.termsSections.INDEMNIFICATION]
							li.pyTermsSidebarSection
								a(href='#' + section, prevent-default='', scroll-to=section)= t('terms:' + section + '.t')
			span(scroll-spy=constants.viewIds.SIDEBAR, data-scroll-offset=constants.values.SCROLLSPY_OFFSET).pyTerms.col-xs-12.col-sm-8.col-md-9
				div.row
					span.col-xs-12.text-center
						h1= t('terms:default.t')
					span.col-xs-1
					hr.col-xs-10
					span.col-xs-1
				div(ng-show='authenticated').row.ng-hide
					span.col-xs-12.text-center
						em.text-pad-left!= t('terms:default.p.0')
					span.col-xs-12.text-center
						strong.text-pad-left!= t('terms:default.p.1')
					span.col-xs-12.text-center
						div.row
							span.col-xs-1
							button(type='button', scroll-to='pyTermsAcceptButton').btn.col-xs-10
								i.fa.fa-fw.fa-3x.fa-arrow-down.pull-left
								i.fa.fa-fw.fa-3x.fa-arrow-down.pull-right
							span.col-xs-1
				+TermsSection(constants.termsSections.ACCEPT, t('terms:acceptance.t'), [{ty:'p',v:[t('terms:acceptance.p.0'),t('terms:acceptance.p.1')]}])
				+TermsSection(constants.termsSections.CHANGES, t('terms:changes.t'), [{ty:'p',v:[t('terms:changes.p.0')]}])
				+TermsSection(constants.termsSections.PRIVACY, t('terms:privacy.t'), [{ty:'p',v:[t('terms:privacy.p.0')]},
					{ty:'ul',t:t('terms:privacy.ul.0.t'),v:[t('terms:privacy.ul.0.0'),t('terms:privacy.ul.0.1'),t('terms:privacy.ul.0.2'),t('terms:privacy.ul.0.3')]},
					{ty:'ul',t:t('terms:privacy.ul.1.t'),v:[t('terms:privacy.ul.1.0'),t('terms:privacy.ul.1.1'),t('terms:privacy.ul.1.2'),t('terms:privacy.ul.1.3'),t('terms:privacy.ul.1.4')]},
					{ty:'ul',t:t('terms:privacy.ul.2.t'),v:[t('terms:privacy.ul.2.0'),t('terms:privacy.ul.2.1'),t('terms:privacy.ul.2.2'),t('terms:privacy.ul.2.3'),t('terms:privacy.ul.2.4'),t('terms:privacy.ul.2.5'),t('terms:privacy.ul.2.6'),t('terms:privacy.ul.2.7'),t('terms:privacy.ul.2.8'),t('terms:privacy.ul.2.9')]}])
				+TermsSection(constants.termsSections.ACCESS, t('terms:access.t'), [{ty:'p',v:[t('terms:access.p.0'),t('terms:access.p.1'),t('terms:access.p.2'),t('terms:access.p.3')]}])
				+TermsSection(constants.termsSections.SECURITY, t('terms:security.t'), [{ty:'p',v:[t('terms:security.p.0'),t('terms:security.p.1')]}])
				+TermsSection(constants.termsSections.REPORTS, t('terms:reports.t'), [{ty:'p',v:[t('terms:reports.p.0')]}])
				+TermsSection(constants.termsSections.IP, t('terms:intellectualProperty.t'), [{ty:'p',v:[t('terms:intellectualProperty.p.0')]}])
				+TermsSection(constants.termsSections.CONTENT, t('terms:userContent.t'), [{ty:'p',v:[t('terms:userContent.p.0'),t('terms:userContent.p.1'),t('terms:userContent.p.2'),t('terms:userContent.p.3'),t('terms:userContent.p.4'),t('terms:userContent.p.5')]}])
				+TermsSection(constants.termsSections.DISRUPTIONS, t('terms:serviceDisruptions.t'), [{ty:'p',v:[t('terms:serviceDisruptions.p.0')]}])
				+TermsSection(constants.termsSections.STANDARDS, t('terms:contentStandards.t'), [{ty:'p',v:[t('terms:contentStandards.p.0'),t('terms:contentStandards.p.1')]},
					{ty:'ol',v:[t('terms:contentStandards.ol.0'),t('terms:contentStandards.ol.1'),t('terms:contentStandards.ol.2'),t('terms:contentStandards.ol.3'),t('terms:contentStandards.ol.4'),t('terms:contentStandards.ol.5'),t('terms:contentStandards.ol.6'),t('terms:contentStandards.ol.7'),t('terms:contentStandards.ol.8'),t('terms:contentStandards.ol.9'),t('terms:contentStandards.ol.10'),t('terms:contentStandards.ol.11'),t('terms:contentStandards.ol.12')]}])
				+TermsSection(constants.termsSections.VIOLATIONS, t('terms:contentViolations.t'), [{ty:'p',v:[t('terms:contentViolations.p.0')]}])
				+TermsSection(constants.termsSections.PROHIBITED, t('terms:prohibitedUse.t'), [{ty:'p',v:[t('terms:prohibitedUse.p.0')]},
					{ty:'ol',v:[t('terms:prohibitedUse.ol.0'),t('terms:prohibitedUse.ol.1'),t('terms:prohibitedUse.ol.2'),t('terms:prohibitedUse.ol.3'),t('terms:prohibitedUse.ol.4'),t('terms:prohibitedUse.ol.5'),t('terms:prohibitedUse.ol.6'),t('terms:prohibitedUse.ol.7'),t('terms:prohibitedUse.ol.8'),t('terms:prohibitedUse.ol.9'),t('terms:prohibitedUse.ol.10'),t('terms:prohibitedUse.ol.11'),t('terms:prohibitedUse.ol.12'),t('terms:prohibitedUse.ol.13'),t('terms:prohibitedUse.ol.14')]}])
				+TermsSection(constants.termsSections.PENNIES, t('terms:pennies.t'), [{ty:'p',v:[t('terms:pennies.p.0')]},
					{ty:'ol',v:[t('terms:pennies.ol.0'),t('terms:pennies.ol.1'),t('terms:pennies.ol.2'),t('terms:pennies.ol.3'),t('terms:pennies.ol.4'),t('terms:pennies.ol.5'),t('terms:pennies.ol.6'),t('terms:pennies.ol.7'),t('terms:pennies.ol.8'),t('terms:pennies.ol.9'),t('terms:pennies.ol.10'),t('terms:pennies.ol.11'),t('terms:pennies.ol.12'),t('terms:pennies.ol.13'),t('terms:pennies.ol.14'),t('terms:pennies.ol.15'),t('terms:pennies.ol.16'),t('terms:pennies.ol.17'),t('terms:pennies.ol.18'),t('terms:pennies.ol.19')]}])
				+TermsSection(constants.termsSections.TIPS, t('terms:tips.t'), [{ty:'p',v:[t('terms:tips.p.0')]},
					{ty:'ol',v:[t('terms:tips.ol.0'),t('terms:tips.ol.1'),t('terms:tips.ol.2'),t('terms:tips.ol.3'),t('terms:tips.ol.4'),t('terms:tips.ol.5'),t('terms:tips.ol.6'),t('terms:tips.ol.7'),t('terms:tips.ol.8'),t('terms:tips.ol.9'),t('terms:tips.ol.10'),t('terms:tips.ol.11'),t('terms:tips.ol.12'),t('terms:tips.ol.13'),t('terms:tips.ol.14'),t('terms:tips.ol.15')]}])
				+TermsSection(constants.termsSections.PROMOTION, t('terms:promotingContent.t'), [{ty:'p',v:[t('terms:promotingContent.p.0'),t('terms:promotingContent.p.1'),t('terms:promotingContent.p.2'),t('terms:promotingContent.p.3')]}])
				+TermsSection(constants.termsSections.COOKIES, t('terms:cookies.t'), [{ty:'p',v:[t('terms:cookies.p.0')]}])
				+TermsSection(constants.termsSections.BACKERS, t('terms:backers.t'), [{ty:'p',v:[t('terms:backers.p.0'),t('terms:backers.p.1')]},
					{ty:'ol',v:[t('terms:backers.ol.0'),t('terms:backers.ol.1'),t('terms:backers.ol.2'),t('terms:backers.ol.3'),t('terms:backers.ol.4'),t('terms:backers.ol.5'),t('terms:backers.ol.6')]}])
				+TermsSection(constants.termsSections.OTHER, t('terms:otherActions.t'), [{ty:'p',v:[t('terms:otherActions.p.0')]}])
				+TermsSection(constants.termsSections.INFRINGEMENT, t('terms:infringement.t'), [{ty:'p',v:[t('terms:infringement.p.0'),t('terms:infringement.p.1'),t('terms:infringement.p.2')]},
					{ty:'ol',v:[t('terms:infringement.ol.0'),t('terms:infringement.ol.1'),t('terms:infringement.ol.2'),t('terms:infringement.ol.3'),t('terms:infringement.ol.4'),t('terms:infringement.ol.5')]}])
				+TermsSection(constants.termsSections.DISCIPLINE, t('terms:disciplinaryActions.t'), [{ty:'p',v:[t('terms:disciplinaryActions.p.0')]},
					{ty:'ol',v:[t('terms:disciplinaryActions.ol.0'),t('terms:disciplinaryActions.ol.1'),t('terms:disciplinaryActions.ol.2'),t('terms:disciplinaryActions.ol.3'),t('terms:disciplinaryActions.ol.4'),t('terms:disciplinaryActions.ol.5'),t('terms:disciplinaryActions.ol.6'),t('terms:disciplinaryActions.ol.7'),t('terms:disciplinaryActions.ol.8'),t('terms:disciplinaryActions.ol.9')]}])
				+TermsSection(constants.termsSections.COMMUNICATION, t('terms:communication.t'), [{ty:'p',v:[t('terms:communication.p.0')]}])
				+TermsSection(constants.termsSections.INDEMNIFICATION, t('terms:indemnification.t'), [{ty:'p',v:[t('terms:indemnification.p.0')]}])
				+TermsSection(constants.termsSections.JURISDICTION, t('terms:jurisdiction.t'), [{ty:'p',v:[t('terms:jurisdiction.p.0')]}])
				+TermsSection(constants.termsSections.PRIOR, t('terms:priorAgreements.t'), [{ty:'p',v:[t('terms:priorAgreements.p.0')]}])
				+TermsSection(constants.termsSections.SEVERABILITY, t('terms:severability.t'), [{ty:'p',v:[t('terms:severability.p.0')]}])
				+TermsSection(constants.termsSections.WAIVER, t('terms:waiver.t'), [{ty:'p',v:[t('terms:waiver.p.0')]}])
				+TermsSection(constants.termsSections.TRANSLATION, t('terms:translation.t'), [{ty:'p',v:[t('terms:translation.p.0')]}])
				//-
					each section, key in constants.termsSections
						div.pyHelpSection.row
							span.col-xs-12
								h3(id=section.name)= t('terms:' + section.name + '.t')
							if section.p && section.p > 0
								- i = 0;
								span.col-xs-12
									span.row
										while i < section.p
											span.col-xs-12
												p.text-pad-left!= t('terms:' + section.name + '.p.' + i)
											- i++
							if section.ul && section.ul > 0
								- i = 0;
								span.col-xs-12
									ul
										while i < section.ul
											li!= t('terms:' + section.name + '.ul.' + i)
											- i++
							if section.ol && section.ol > 0
								- i = 0;
								span.col-xs-12
									ol
										while i < section.ol
											li!= t('terms:' + section.name + '.ol.' + i)
											- i++
				span(ng-show='authenticated').row.ng-hide
					span.col-xs-12
						span.pull-left
							+SubButton(t('termsOptions.decline'), undefined, 'fa-times', 'decline()')
						span.pull-right#pyTermsAcceptButton
							+SubButton(t('termsOptions.acceptWait'), undefined, 'fa-cog fa-spin', undefined, '!allowAccept', undefined, undefined, undefined, undefined, '!allowAccept')
							+SubButton(t('termsOptions.accept'), undefined, 'fa-check', 'accept()', 'allowAccept', undefined, undefined, undefined, undefined, '!allowAccept')