mixin FormSelect(id, label, helpTopic, helpSection, options, bind, error, disabled, addonPre, addonPost)
	+FormSection(id, label, helpTopic, helpSection, error)
		span.col-xs-12.input-group
			if addonPre
				span.input-group-addon= addonPre
			select(ng-model=bind, ng-options=options, id=id).form-control
			if addonPost
				span.input-group-addon= addonPost
			if block
				span.input-group-btn
					block
	//div.formInput.row
		if label
			span.col-xs-12
				label(for=id)= label
				if helpTopic
					+HelpLink(helpTopic, helpSection, 'bottom').pull-right
			if error
				span.col-xs-12
					+ValidationInformation(error)(for=id)
		span.col-xs-12.input-group
			if addonPre
				span.input-group-addon= addonPre
			select(ng-model=bind, ng-options=options, id=id).form-control
			if addonPost
				span.input-group-addon= addonPost
			if block
				span.input-group-btn
					block