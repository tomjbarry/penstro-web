mixin NJTagPreview(preview)
	if preview
		- var pathVars = {}; pathVars[constants.pathVariables.TAG] = preview.name;
		- var tagLink = utils.utils.formatUrl(constants.viewUrls.TAGS_ID, pathVars);
		+NJPreview
			div.row
				span.col-xs-12.col-sm-8.col-md-9.col-lg-10
					+NJLink(tagLink).pyTagReference
						+TitleIcon('fa-tag')
						+NJTitle(preview.name)
				span.col-xs-12.col-sm-4.col-md-3.col-lg-2
					+NJAppreciationSummary(preview.appreciation)